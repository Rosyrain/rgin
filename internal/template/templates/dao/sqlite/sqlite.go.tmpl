package sqlite

import (
	"database/sql"
	_ "github.com/mattn/go-sqlite3"
	"log"
	"path/filepath"
	"os"
	"go.uber.org/zap"
)

var db *sql.DB

// InitDB 初始化 SQLite 数据库连接（仅连接，不自动建表）
func InitDB(dbPath string) error {
	// 确保数据库目录存在
	if err := os.MkdirAll(filepath.Dir(dbPath), 0755); err != nil {
		return err
	}

	// 连接数据库
	var err error
	db, err = sql.Open("sqlite3", dbPath)
	if err != nil {
		return err
	}

	// 测试连接
	if err = db.Ping(); err != nil {
		return err
	}

	zap.L().Info("SQLite database connected successfully")
	// 提示：如为首次运行，请手动执行 models/create_table.sql 初始化表结构！
	// 例如：sqlite3 ./data/app.db < models/create_table.sql
	return nil
}

// Close 关闭数据库连接
func Close() error {
	if db != nil {
		return db.Close()
	}
	return nil
}

// 注：表结构初始化需用户手动执行建表 SQL，避免每次启动清空数据 